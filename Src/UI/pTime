#include "ui.h"
#include "geotest.h"
#include <stdlib.h>
#include "lcd.h"

extern struct UIPage pKeyboard;
extern struct KBInfo kbInfo;
extern struct GeoParam geoparam[10];
extern struct Settings settings;
extern struct UIInfo UIInfo;
extern struct UIInfo pSys;
static char StringArray[6][20];
struct UIPage pTime;
static struct UIWidget widgetList[6];

RTC_DateTypeDef Date;
RTC_TimeTypeDef Time;

static void kbCallBack()
{
	char str[20];
	int val;
	switch(pSys.widgetSelected)
	{
		case 2:
			val = atoi(kbInfo.kbBuff);
			settings.backlight = val>100 ? 100 : val<1 ? 1 : val;
			LCD_BL(settings.backlight);
			break;
		case 3:
			val = atoi(kbInfo.kbBuff);
			settings.sleeptime = val<1 ? 1 : val;
		case 4:
			val = atoi(kbInfo.kbBuff);
			settings.shuttime = val<1 ? 1 : val;
		default:
			break;
	}
	UIInfo.flagSettings = 1;
}

static void goSubSettings(struct UIWidget * widget)
{
	strcpy(kbInfo.kbTitle,widget->widgetTitle);
	strcpy(kbInfo.kbBuff,widget->widgetPtr);
	kbInfo.kbCallBack = kbCallBack;
	PageJump(&pTime);
}

static void widgetInit(struct UIWidget * widget)
{
	switch(widget->widgetIndex)
	{
		case 0:
			sprintf(widget->widgetPtr,"",Date.Year);
			break;
		case 1:
			sprintf(widget->widgetPtr,settings.buzzer ? "ON" : "OFF");
			break;
		case 2:
			sprintf(widget->widgetPtr,"%d",settings.backlight);
			break;
		case 3:
			sprintf(widget->widgetPtr,"%d",settings.sleeptime);
			break;
		case 4:
			sprintf(widget->widgetPtr,"%d",settings.shuttime);
			break;
		default:
			break;
	}
}

static void pageReturn(struct UIPage * page)
{
	PageJump(&pSys);
}

static struct UIWidget widgetList[6] =
{
	{0,1,0,{0,120,479,179},"Year",0,StringArray[0],widgetInit,drawSLabel,goSubSettings},
	{1,1,0,{0,180,479,239},"Month",0,StringArray[1],widgetInit,drawSLabel,goSubSettings},
	{2,1,0,{0,240,479,299},"Date",0,StringArray[2],widgetInit,drawSLabel,goSubSettings},
	{3,1,0,{0,300,479,359},"Hour",0,StringArray[3],widgetInit,drawSLabel,goSubSettings},
	{4,1,0,{0,360,479,419},"Minute",0,StringArray[4],widgetInit,drawSLabel,goSubSettings},
	{5,1,0,{0,420,479,479},"Second",0,StringArray[5],widgetInit,drawSLabel,goSubSettings},
};

static void pageInit(struct UIPage * page)
{
	memcpy(&Date,&rtcDate,sizeof(struct RTC_DateTypeDef));
	memcpy(&Time,&rtcTime,sizeof(stuct RTC_TimeTypeDef));
}

struct UIPage pTime = 
{
	"Date & Time",
	6,//char widgetNum;
	-1,
	widgetList,//struct UIWidget * widgetList;
	NULL,
	pageReturn,
	keyboardEvent,
	touchEvent,
};

